<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doctorListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".doctorlistActivity">

    <!-- Header with Filter -->
    <LinearLayout
        android:id="@+id/doctorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/btnAll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="All"
            android:background="@drawable/tab_button_selector"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btnCardiologist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cardiologist"
            android:background="@drawable/tab_button_selector"
            android:textColor="#00AEEF"/>

        <Button
            android:id="@+id/btnPulmonologist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pulmonologist"
            android:background="@drawable/tab_button_selector"
            android:textColor="#00AEEF"/>

        <Button
            android:id="@+id/btnNeurologist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Neurologist"
            android:background="@drawable/tab_button_selector"
            android:textColor="#00AEEF"/>
    </LinearLayout>

    <!-- Doctor Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <include layout="@layout/activity_doctor_card"/>
            <include layout="@layout/activity_doctor_card"/>
            <!-- You can duplicate or use RecyclerView for dynamic data -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
