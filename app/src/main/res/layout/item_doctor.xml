<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Doctor Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Doctor Image -->
<!--            <ImageView-->
<!--                android:id="@+id/doctorImage"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="80dp"-->
<!--                android:src="@drawable/doctor_placeholder"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:layout_marginEnd="16dp"-->
<!--                android:background="@drawable/circle_background"/>-->

            <!-- Doctor Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dr. Juan Dela Cruz"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/doctorSpecialty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardiologist"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/doctorClinic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HeartCrea Clinic"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RatingBar
                        android:id="@+id/doctorRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5.0"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Contact Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/doctorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: juan.delacruz@heartcrea.com"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/doctorPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: +63 912 345 6789"/>
        </LinearLayout>

        <!-- Book Button -->
        <Button
            android:id="@+id/bookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>