<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUp">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_white" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:letterSpacing="0.2"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:text="SIGN UP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:letterSpacing="0.1"
                android:textAlignment="center"
                android:text="(For Patient only)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/black"> <!-- Visible border color -->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/FullName"
                        android:paddingBottom="22dp"
                        android:textSize="12dp"

                        android:textAlignment="center"
                        android:gravity="center"
                        android:hint="Full Name (ex. Juan Dela Cruz)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>




                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <!-- Age Input -->
                    <EditText
                        android:id="@+id/Age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Age"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:paddingBottom="22dp"
                        android:textSize="13dp"
                        android:textColorHint="@color/black"/>

                    <!-- Gender Dropdown (Spinner) -->
                    <Spinner
                        android:id="@+id/sex_picker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:entries="@array/gender_options"/>

                    <!-- Birthdate Picker -->
                    <EditText
                        android:id="@+id/birthdate_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:hint="Birthdate"
                        android:textAlignment="center"
                        android:focusable="false"
                        android:clickable="true"
                        android:paddingBottom="22dp"
                        android:textColorHint="@color/black"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/black"> <!-- Visible border color -->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Username"
                        android:paddingBottom="22dp"
                        android:textSize="13dp"

                        android:textAlignment="center"
                        android:gravity="center"
                        android:hint="Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/black"> <!-- Visible border color -->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Email"
                        android:paddingBottom="22dp"
                        android:textSize="13dp"

                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:hint="Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Country Code Spinner -->
                    <Spinner
                        android:id="@+id/spinnerCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Phone Number Input -->
                    <EditText
                        android:paddingBottom="22dp"
                        android:id="@+id/editTextPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter phone number"
                        android:inputType="phone"
                        android:ems="10"
                        android:textSize="16sp"/>
                </LinearLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/black"
                    app:endIconMode="password_toggle">  <!-- Enable the password toggle eye icon -->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Password"
                        android:paddingBottom="22dp"
                        android:textSize="13dp"

                        android:textAlignment="center"
                        android:gravity="center"
                        android:hint="Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <Button
                    android:layout_marginTop="30dp"
                    android:id="@+id/signupBtn"
                    android:layout_gravity="center"
                    android:background="@drawable/button_rounded_bgwhite"
                    android:textColor="@color/orange"
                    android:textSize="18dp"
                    android:text="Sign Up"
                    android:layout_width="115dp"
                    android:layout_height="50dp"
                    android:textAllCaps="false"/>

                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/login_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? "
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/log_in_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log in"
                        android:textSize="16sp"
                        android:textColor="@color/orange"
                        android:layout_marginStart="4dp"
                        android:clickable="true"
                        android:focusable="true"/>


                </LinearLayout>







            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</ScrollView>