<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_green" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:text="Pending Appointment"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Appointment Card -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user1"
                android:layout_marginEnd="12dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="Patient Number: 20240329-001"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="220dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I've been experiencing joint pain and stiffness, especially in my knees and fingers."
                    android:paddingTop="4dp"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="9:00 AM"
                    android:textColor="#00AA99"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="April 10, 2025"
                    android:textColor="#00AA99" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reschedule"
                        android:textSize="12sp"
                        android:layout_marginEnd="6dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:textSize="12sp"/>


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user2"
                android:layout_marginEnd="12dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="Patient Number: 20240329-001"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="220dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I've been experiencing joint pain and stiffness, especially in my knees and fingers."
                    android:paddingTop="4dp"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="10:00 AM"
                    android:textColor="#00AA99"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="April 21, 2025"
                    android:textColor="#00AA99" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reschedule"
                        android:textSize="12sp"
                        android:layout_marginEnd="6dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:textSize="12sp"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user3"
                android:layout_marginEnd="12dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="Patient Number: 20240329-001"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="220dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I've been dealing with a persistent cough and shortness of breath for the past two weeks."
                    android:paddingTop="4dp"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="1:00 PM"
                    android:textColor="#00AA99"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="April 29, 2025"
                    android:textColor="#00AA99" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reschedule"
                        android:textSize="12sp"
                        android:layout_marginEnd="6dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:textSize="12sp"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user4"
                android:layout_marginEnd="12dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="Patient Number: 20240329-001"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="220dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I've been having persistent stomach pain and bloating for the past few days."
                    android:paddingTop="4dp"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="2:00 PM"
                    android:textColor="#00AA99"
                    />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="May 8, 2025"
                    android:textColor="#00AA99" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reschedule"
                        android:textSize="12sp"
                        android:layout_marginEnd="6dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:textSize="12sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
